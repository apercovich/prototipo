<div class="centrado">
	<h1>Tareas del usuario <%= current_user.name%></h1>
	
	
	
  <table class="lista">
    <tr>
	    <th class="etiqueta">Id</th>
	    <th class="etiqueta">Fecha</th>
	    <th class="etiqueta">Hora inicio</th>
	    <th class="etiqueta">Hora fin</th>
	    <th class="etiqueta">Descripcion</th>
	    <th></th>
	</tr>
	 <% @tasks.each do |tarea| %>	
  	<tr>
  		<td><%= tarea.id %></td>
  		<td><%= tarea.date %></td>
  		<td><%= tarea.time_start %></td>
  		<td><%= tarea.time_end %></td>
  		<td><%= tarea.description %></td>
      <td><%= link_to "Ver", task_path(tarea) %></td>
  		<td><%= link_to "Modificar", edit_task_path(tarea) %></td>
  		<td><%= link_to "Eliminar", tarea, :method => :delete , data: { confirm: 'Â¿Seguro que desea eliminar la tarea?' }%></td>
  	</tr>
  <% end %>
  </table>
  
  <%= link_to "Volver al inicio", main_path %>

</div>