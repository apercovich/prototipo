<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error">
      <%= pluralize(@user.errors.count, "error") %>:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <table class="table-stripped">
  	<tr>
  		<td>Nombre</td>
  		<td><%= f.text_field :name, class:"form-control", :autofocus=>true, :placeholder=>"Nombre" %></td>
  	</tr>
  	<tr>
  		<td>Correo electrónico</td>
  		<td><%= f.text_field :email, class:"form-control", :placeholder=>"Email" %></td>
  	</tr>
  	<tr>
  		<td>Contraseña</td>
  		<td><%= f.password_field :password , class:"form-control", :placeholder=>"Contraseña"%></td>
  	</tr>
  	<tr>
  		<td>Repetir contraseña</td>
  		<td><%= f.password_field :password_confirmation , class:"form-control", :placeholder=>"Confirme contraseña"%></td>
  	</tr>
  	<tr>
  		<td>Rol</td>
  		<td>
  			<%= collection_select(:user, :role_id, UserRole.all(), :id, :name) %>
  		</td>
  	</tr>
  	<tr>
  		<td colspan="2">&nbsp;</td>
  	</tr>
  	<tr>
  		<td colspan="2"><%= f.submit "Ingresar", class: "btn btn-block btn-primary"%></td>
  	</tr>
  </table>

<% end %>
