/* ************************************************************************ */
/* 			Objetos HTML 																												*/
/* ************************************************************************ */

body{
	width: 100%;
	height:100%;
}

h1 {
	font-size: 16px;
	margin-bottom: 30px;
}

h2 {
	font-size: 13px;
	margin-bottom: 20px;
}

input {
	font-size: 12px;
}

input[type="submit"] {
	float: right;
}

a {
	text-decoration: none;
}
a:hover {
	text-decoration: underline;
}


/* ************************************************************************ */
/* 			Estructura de la plantilla																					*/
/* ************************************************************************ */

#todo {
	font-family: Verdana, Geneva, Arial, Helvetica, sans-serif;
	font-size: 12px;

	margin-left: 10%;
	margin-right: 10%;
	margin-top: 0%;


	width: 80%;
	height: 100%;
}
@media all and (min-width: 691px) {
	#cabezal {
		width: 100%;
		height: 250px;
		background: url(<%= asset_path "banner3.png" %>) no-repeat bottom;
		background-color: #A4CDC5;
		background-size:100% 100%;
	}
}
@media all and (max-width: 690px) and (min-width: 1px) {


	#cabezal {
		width: 100%;
		height: 125px;
		/*background: url("banner3.png") no-repeat bottom;*/
		background-color: #A4CDC5;
		background-size:100% 100%;
	}

}

#cabezal{
	margin-bottom: 0px;
}


#pie {
	height: 30px;
	background-color: #A4CDC5;/*#00A425;*/
	clear: both;
}

#cuerpo {
	width: 100%;
	float: left;
	background-color: #eeeeee;


	margin-top: 0%;
}

.barraMenu{
	margin-top: 0%;
}

#menu {
	margin-top: 0%;
	float: left;
	width: 200px;
}
#menu li {
	list-style: none;
	padding-left: 10px;
}
#menu li.tituloMenu {
	margin-left: -10px;
	font-size: 13px;
}

#contenido {
	margin-top: 0%;
	float: left;
	width: 80.5%;
	min-height: 400px;
	background-color: inherit;
}


/* ************************************************************************ */
/* 			Estilos utiles																											*/
/* ************************************************************************ */

#mensajesFlash {
	margin: 20px auto 30px auto;
	padding: 10px 15px 10px 15px;
	font-weight: bold;
}

.centrado {
	text-align: center;
}
.centrado table {
	margin: 0 auto;
	text-align: left;
}

li.implem a {
	text-decoration: line-through;
	color: #EC4343;
}